<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.PlannerController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-spacing: 10;"
      stylesheets="@../styles/planner.css"
      styleClass="planner">

    <ImageView fx:id="banner" />
    <Label text="My Planner" styleClass="planner-title"/>

    <ListView fx:id="plannerListView" prefHeight="300" prefWidth="400" styleClass="planner-list" />

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="removePlaceButton" text="Remove Selected Place" styleClass="planner-button"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="backButton" text="Back to Places" styleClass="planner-button"/>
    </HBox>
</VBox>
