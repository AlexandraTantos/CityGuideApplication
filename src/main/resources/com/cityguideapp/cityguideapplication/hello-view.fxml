<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cityguideapp.cityguideapplication.CityGuideController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Welcome Label -->
    <Label fx:id="welcomeLabel" text="Welcome to CityGuide!" />

    <!-- City List -->
    <ListView fx:id="cityListView" />

    <!-- Show Info Button -->
    <Button fx:id="showInfoButton" text="Show Info" />

    <!-- Information Area -->
    <TextArea fx:id="infoArea" editable="false" wrapText="true"/>

</VBox>